# ==========================================
# CONFIGURAÇÕES DJANGO
# ==========================================

# SECURITY WARNING: Gere uma nova SECRET_KEY para produção!
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Debug mode - SEMPRE "off" em produção!
DEBUG=off

# Hosts permitidos (separados por vírgula, sem espaços)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# URL do site (usado para CSRF e links absolutos)
SITE_URL=https://yourdomain.com

# URL customizada do admin (mude do padrão para segurança)
ADMIN_URL=secure-admin-path/

# ==========================================
# BANCO DE DADOS
# ==========================================

DB_NAME=gruporom_prod
DB_USER=gruporom_user
DB_PASS=secure-password-here
DB_HOST=localhost
DB_PORT=5432

# ==========================================
# SEGURANÇA
# ==========================================

# Origins confiáveis para CSRF (separados por vírgula)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redirecionamento SSL (True em produção com HTTPS)
SECURE_SSL_REDIRECT=True

# ==========================================
# EMAIL
# ==========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ==========================================
# CRIPTOGRAFIA DE CAMPOS SENSÍVEIS
# ==========================================

# IMPORTANTE: Gere uma nova chave para produção!
# Para gerar: python -c "from cryptography.fernet import Fernet; import base64; print(base64.b64encode(Fernet.generate_key()).decode())"
DJANGO_ENCRYPTION_KEY=Q3I2T3hsTGY4QWd4OXB5RUZ0YUFuMFpNOWZyN0FYYS03eTlmbDZpaG5rRT0=

# ==========================================
# WHATSAPP BUSINESS API
# ==========================================

# Meta/Facebook App
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret
META_BUSINESS_ID=your-business-id

# WhatsApp Business
WHATSAPP_API_VERSION=v19.0
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# ==========================================
# REDIS (Cache e Channels)
# ==========================================

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=1

# ==========================================
# STORAGE (S3/CloudFlare R2)
# ==========================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# ==========================================
# MONITORING (Opcional)
# ==========================================

# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-license-key

# ==========================================
# PATHS
# ==========================================

STATIC_ROOT=/var/www/gruporom/static
MEDIA_ROOT=/var/www/gruporom/media